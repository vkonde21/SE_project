{{#section 'style'}}
    .cover {
      display: flex;
      flex-direction: column;
    }
    .content {
      flex: 1 0 auto;
    }
    #contact {
      flex-shrink: 0;
    }
    #mygif {
      position: fixed;
      right: 0;
      bottom: 0;
      min-width: 100%;
      min-height: 100%;
    }
    {{/section}}
  
    
  
  <div class="cover">
  <img src="/img/crops.gif" id="mygif" alt="...">

  <header id="header-wrap">
      <!-- Navbar Start -->
      <nav
        class="navbar navbar-expand-lg fixed-top scrolling-navbar"
        style="background-color: #fff;"
      >
        <div class="container">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button
              class="navbar-toggler"
              type="button"
              data-toggle="collapse"
              data-target="#main-navbar"
              aria-controls="main-navbar"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
              <span class="icon-menu"></span>
              <span class="icon-menu"></span>
              <span class="icon-menu"></span>
            </button>
            <img src="/img/logo.png" class="navbar-brand" style="width: 230px; height:70px" alt=""/>
          </div>
          <div class="collapse navbar-collapse" id="main-navbar" style="margin-left: 10%;">
            <ul class="navbar-nav mr-auto w-100">
              <li class="nav-item active">
                <a class="nav-link" href="dashboard">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="viewfarmers">View Farmers' Profiles</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="updateprofile">Update Profile</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="chat">Chat</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="logout">Logout</a>
              </li>
            </ul>
          </div>
        </div>
        <ul class="mobile-menu">
          <li>
            <a class="page-scroll" href="dashboard">Dashboard</a>
          </li>
          <li>
            <a class="page-scroll" href="viewfarmers">View Farmers' Profiles</a>
          </li>
          <li>
            <a class="page-scroll" href="updateprofile">Update Profile</a>
          </li>
          <li>
            <a class="page-scroll" href="chat">Chat</a>
          </li>
          <li>
            <a class="page-scroll" href="logout">Logout</a>
          </li>
        </ul>
      </nav>
    </header>
    <br><br><br><br>
    <div style="text-align: right; position: sticky; padding-right: 50px">
      <span style="background-color: #fff; font-size: 20px; color:#016168; padding: 10px; opacity: 80%;">Hello {{user.username}}</span>
    </div>
    <br><br>
    <h1 class="section-title wow fadeInUp animated" data-wow-delay="0.2s" style="visibility: visible; -webkit-animation-delay: 0.2s; -moz-animation-delay: 0.2s; animation-delay: 0.2s;">
       <span style="background-color: #fff; font-size: 50px; color:#016168; padding: 15px; opacity: 90%;">Dashboard</span> 
    </h1>
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col">
        <div class="card" style="opacity: 90%; height: 130px">
          <div class="card-body">
            <h5 class="card-title">Name</h5>
            <p class="card-text">{{investor.fullname}}</p>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card" style="opacity: 90%; height: 130px">
          <div class="card-body">
            <h5 class="card-title">Number of deals</h5>
            <p class="card-text">{{investor.deals}}</p>
          </div>
        </div>
      </div>
      <div class="col-lg-2"></div>
    </div>
    <br>
    <div class="row">
      <div class="col-lg-4"></div>
      <div class="col">
        <div class="card" style="opacity: 90%; height: 130px">
          <div class="card-body">
            <h5 class="card-title">Range of investment</h5>
            <p class="card-text">INR {{investor.start}} - {{investor.end}}</p>
          </div>
        </div>
      </div>
      <div class="col-lg-4"></div>
    </div>
    <br>
    <div class="row">
      <div class="col-lg-4"></div>
      <div class="col">
        <div class="card" style="opacity: 90%; height: 250px">
          <div class="card-body">
            <h5 class="card-title">New deal confirmation</h5>
            <p class="card-text">Enter the username of the farmer who you signed a deal with (It will reflect on your account after the farmer has confirmed the deal):</p>
            <form method="POST" action="deal_lock">
              <input type="text" class="form-control" placeholder="Username of farmer" name="farmerusername" />
            <div class="row">
                <div class="col-4"></div>
                <div class="col-4">
                    <button type="submit" href="" class="btn btn-common btn-nv-sty" style="width: 100%;">Submit</button> 
                </div>
                <div class="col-4"></div>
            </div>  
            </form>                   
          </div>
        </div>
      </div>
      <div class="col-lg-4"></div>
    </div>
  </div>