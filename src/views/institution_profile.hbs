  <div class="content">
    <div style="text-align: right; position: sticky; padding-right: 50px">
      <span style="background-color: #fff; font-size: 20px; color:#016168; padding: 10px; opacity: 80%;">Hello {{user.username}}</span>
    </div>
    <br><br>
    <section id="form-dom" class="services">
      <div class="container" style="margin-bottom: 30px; opacity:90%">
        <div class="row">
          <div class="col-12">
            <div class="col-12 col-md-12 col-lg-8 log-style">
              <div id="form-main">
                <h1
                  class="section-title wow fadeInUp animated"
                  data-wow-delay="0.2s"
                  style="
                    visibility: visible;
                    -webkit-animation-delay: 0.2s;
                    -moz-animation-delay: 0.2s;
                    animation-delay: 0.2s;
                  "
                >
                  Update your profile
                </h1>
                <div style="color: red;">
                  <p style="font-size: 15px; text-align: center">{{messageFailure}}</p>
                </div>
                <div style="color: green;">
                  <p style="font-size: 15px; text-align: center">{{messageSuccess}}</p>
                </div>
                <div class="design">
                  <form id="register-form" method="POST" action="updateprofile" >
                    <h3></h3>
                    <div class="row">
                      <div class="col">
                          <h3>Full Name</h3>
                        <input
                          type="text"
                          class="form-control"
                          placeholder="Full Name"
                          name="registername"
                          value="{{institution.fullname}}"
                          required
                        />
                      </div>
                    </div>
                    
                    <div class="row">
                      <div class="col">
                          <h3>Email</h3>
                        <input
                          type="email"
                          class="form-control"
                          placeholder="Email Id"
                          name="email"
                          value="{{user.email}}"
                          required
                        />
                      </div>
                    </div>
                    
                    <div class="row">
                      <div class="col">
                          <h3>Starting range of investment</h3>
                        <input
                          type="text"
                          min="0"
                          class="form-control"
                          placeholder="Starting amount(in INR)"
                          name="startingrange"
                          value="{{institution.start}}"
                          required
                        />
                      </div>
                    </div>
                    <div class="row">
                      <div class="col">
                          <h3>Ending range of investment</h3>
                        <input
                          type="text"
                          min="0"
                          class="form-control"
                          placeholder="Ending amount(in INR)"
                          name="endingrange"
                          value="{{institution.end}}"
                          required
                        />
                      </div>
                    </div>
                    
                    <div class="row">
                       <div class="col-lg-3 col-md-4 col-3"></div> 
                       <div class="col">
                      <button
                        type="submit"
                        href=""
                        class="btn btn-common btn-nv-sty"
                        style="width: 50%;"
                      >
                        Update
                      </button>
                    </div>
                    </div>

                

                    <div class="row">
                      <div class="col">
                        <p class="error text-danger" align="center"></p>
                        <p class="success text-success" align="center"></p>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            <div class="col-6"></div>
          </div>
        </div>
      </div>
    </section>
    </div>
    
    <!-- Go to Top Link -->
    <a href="#" class="back-to-top">
        <i class="lni-chevron-up"></i>
    </a>

    <script>
        function openForm() {
            document.getElementById("myForm").style.display = "block";
        }
        function closeForm() {
            document.getElementById("myForm").style.display = "none";
        }
    </script>
    <script>
        $(document).ready(function() {
            $(".fancybox").fancybox({
                openEffect: "none",
                closeEffect: "none"
            });
            $(".zoom").hover(function() {
                $(this).addClass('transition');
            }, function() {
                $(this).removeClass('transition');
            });
        });
    </script>
