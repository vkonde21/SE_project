<div class="cover">
  <img src="/img/crops.gif" id="mygif" alt="...">
  <div class="content">
    <br><br>
    
      <section id="form-dom" class="services">
        <div class="container" style="margin-bottom: 30px; opacity:90%">
          <div class="row">
            <div class="col-12">
              <div class="col-12 col-md-12 col-lg-8 log-style">
                <div id="form-main">
                  <h1 class="section-title wow fadeInUp animated" data-wow-delay="0.2s" style="
                    visibility: visible;
                    -webkit-animation-delay: 0.2s;
                    -moz-animation-delay: 0.2s;
                    animation-delay: 0.2s;
                  ">
                    Register as a Buyer
                  </h1>
                  <div class="design">
                    <form id="register-form"  method="POST" action="registerbuyer" enctype="multipart/form-data">
                      <h3></h3>
                      <div class="row">
                        <div class="col">
                          <input type="text" class="form-control" placeholder="Full Name" name="registername" />
                        </div>
                      </div>
                      <div class="row">
                        <div class="col">
                          <input type="text" class="form-control" placeholder="Username" name="username" />
                        </div>
                      </div>
                      <div class="row">
                        <div class="col">
                          <input type="email" class="form-control" placeholder="Email Id" name="email" />
                        </div>
                      </div>
                      <div class="row">
                        <div class="col">
                          <input type="Password" class="form-control" placeholder="Password" name="password" />
                        </div>
                      </div>
                      <div class="row">
                        <div class="col">
                          <input type="Password" class="form-control" placeholder="Confirm Password" name="password2" />
                        </div>
                      </div>
                      <div class="row">
                        <div class="col">
                          <input type="text" class="form-control" placeholder="Pan number" name="pannumber" />
                        </div>
                      </div>
                      <div class="row">
                        <div class="col">
                          <input type="text" class="form-control"
                            placeholder="Requirements(specify the names of crops you would usually prefer to buy)"
                            name="requirements" />
                        </div>
                      </div>
                      <div class="row">
                        <div class="col">
                          <label for="pancard">Upload image of Pan Card:</label>
                          <input type="file" class="form-control" placeholder="Pancard" name="pancard" id="pancard" />
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-lg-3 col-md-4 col-3"></div>
                        <div class="col">
                          <button type="submit" href="" class="btn btn-common btn-nv-sty" style="width: 50%;">
                            Register
                          </button>
                        </div>
                      </div>

                      <div class="row">
                        <div class="col-md-3 col-1 col-lg-3"></div>
                        <div class="col">
                          <a href="login" style="font-size: 20px">Already registered? Login here!</a>
                        </div>
                      </div>

                      <div class="row">
                        <div class="col">
                          <p class="error text-danger" align="center"></p>
                          <p class="success text-success" align="center"></p>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
              <div class="col-6"></div>
            </div>
          </div>
        </div>
      </section>
    
