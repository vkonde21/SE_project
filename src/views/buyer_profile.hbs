  <div class="content">
    <br><br>
    
      <section id="form-dom" class="services">
        <div class="container" style="margin-bottom: 30px; opacity:90%">
          <div class="row">
            <div class="col-12">
              <div class="col-12 col-md-12 col-lg-8 log-style">
                <div id="form-main">
                  <h1 class="section-title wow fadeInUp animated" data-wow-delay="0.2s" style="
                    visibility: visible;
                    -webkit-animation-delay: 0.2s;
                    -moz-animation-delay: 0.2s;
                    animation-delay: 0.2s;
                  ">
                    Update your profile
                  </h1>
                  <div class="design">
                    <form id="register-form"  method="POST" action="updateprofile">
                      <h3></h3>
                      <div class="row">
                          
                        <div class="col">
                          <h3>Full Name</h3><input type="text" class="form-control" placeholder="Full Name" name="registername" value="{{buyer.fullname}}" />
                        </div>
                      </div>
                      
                      <div class="row">
                        <div class="col">
                          <h3>Email</h3><input type="email" class="form-control" placeholder="Email Id" name="email" value="{{user.email}}" />
                        </div>
                      </div>
                      
                      
                      <div class="row">
                        <div class="col">
                            <h3>Requirements</h3>
                          <input type="text" class="form-control"
                            placeholder="Requirements(specify the names of crops you would usually prefer to buy)"
                            name="requirements" value="{{buyer.requirements}}"/>
                        </div>
                      </div>                    
                      <div class="row">
                        <div class="col-lg-4 col-md-4 col-4"></div>
                        <div class="col-lg-4 col-md-4 col-4">
                          <button type="submit" href="" class="btn btn-common btn-nv-sty" style="width: 100%;">
                            Update
                          </button>
                        </div>
                      </div>
                     <div class="row">
                        <div class="col">
                          <p class="error text-danger" align="center"></p>
                          <p class="success text-success" align="center"></p>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
              <div class="col-6"></div>
            </div>
          </div>
        </div>
      </section>
    
