{{#section 'style'}}
    .cover {
      display: flex;
      flex-direction: column;
    }
    .content {
      flex: 1 0 auto;
    }
    #contact {
      flex-shrink: 0;
    }
    #mygif {
      position: fixed;
      right: 0;
      bottom: 0;
      min-width: 100%;
      min-height: 100%;
    }
    {{/section}}
  
    
  
  <div class="cover">
  <img src="/img/crops.gif" id="mygif" alt="...">
  <div class="container" style="margin-bottom: 30px; opacity: 90%;">
          
  <header id="header-wrap">
      <!-- Navbar Start -->
      <nav
        class="navbar navbar-expand-lg fixed-top scrolling-navbar"
        style="background-color: #fff;"
      >
        <div class="container">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button
              class="navbar-toggler"
              type="button"
              data-toggle="collapse"
              data-target="#main-navbar"
              aria-controls="main-navbar"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
              <span class="icon-menu"></span>
              <span class="icon-menu"></span>
              <span class="icon-menu"></span>
            </button>
            <img src="/img/logo.png" class="navbar-brand" style="width: 250px; height: 70px" alt=""/>
          </div>
          <div class="collapse navbar-collapse" id="main-navbar" style="margin-left: 4%;">
            <ul class="navbar-nav mr-auto w-100">
              <li class="nav-item active">
                <a class="nav-link" href="dashboard">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="viewfarmers">View Farmers' Profiles</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="updateprofile">Update Profile</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="buyer_orders">Orders</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="chat">Chat</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="logout">Logout</a>
              </li>
            </ul>
          </div>
        </div>

        <ul class="mobile-menu">
          <li>
            <a class="page-scroll" href="dashboard">Dashboard</a>
          </li>
          <li>
            <a class="page-scroll" href="viewfarmers">View Farmers' Profiles</a>
          </li>
          <li>
            <a class="page-scroll" href="updateprofile">Update Profile</a>
          </li>
          <li>
            <a class="page-scroll" href="buyer_orders">Orders</a>
          </li>
          <li>
            <a class="page-scroll" href="chat">Chat</a>
          </li>
          <li>
            <a class="page-scroll" href="logout">Logout</a>
          </li>
        </ul>
      </nav>
    </header>
    <br><br><br><br>
    <div style="text-align: right; position: sticky; padding-right: 50px">
      <span style="background-color: #fff; font-size: 20px; color:#016168; padding: 10px; opacity: 80%;">Welcome {{user.username}}</span>
    </div>
    <br><br>
    <h1 class="section-title wow fadeInUp animated" data-wow-delay="0.2s" style="visibility: visible; -webkit-animation-delay: 0.2s; -moz-animation-delay: 0.2s; animation-delay: 0.2s;">
       <span style="background-color: #fff; font-size: 50px; color:#016168; padding: 15px; opacity: 90%;">Dashboard</span> 
    </h1>
    <div style="color: red;">
      <p style="font-size: 15px; text-align: center"> <span style="background-color: white;">{{messageFailure}}</span> </p>
    </div>
    <div style="color: green;">
      <p style="font-size: 15px; text-align: center"> <span style="background-color: white;">{{messageSuccess}}</span> </p>
    </div>
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col">
        <div class="card" style="opacity: 90%; height: 130px">
          <div class="card-body">
            <h5 class="card-title">Name</h5>
            <p class="card-text">{{buyer.fullname}}</p>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card" style="opacity: 90%; height: 130px">
          <div class="card-body">
            <h5 class="card-title">Number of orders</h5>
            <p class="card-text">{{buyer.orders}}</p>
          </div>
        </div>
      </div>
      <div class="col-lg-2"></div>
    </div>
    <br>
    <div class="row">
      <div class="col-lg-4"></div>
      <div class="col">
        <div class="card" style="opacity: 90%; height: 130px">
          <div class="card-body">
            <h5 class="card-title">Crop requirements</h5>
            <p class="card-text">{{buyer.requirements}}</p>
          </div>
        </div>
      </div>
      <div class="col-lg-4"></div>
    </div>
    <br>
    
     
    <br>
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-4 col-12">
        <div class="card" style="opacity: 90%; height: 300px; margin-bottom: 20px">
          <div class="card-body">
            <h5 class="card-title">Add/update crop requirements</h5>
            <p class="card-text">All the previous crop requirements will be overwritten by the ones entered here so if you want to retain the previous requirements, enter them here along with the new ones.</p>
            <br>
            <form id="requirements" action="crop_requirements" method="POST">
              <input type="text" class="form-control" placeholder="New crop requirements" name="croprequirements" value="{{buyer.requirements}}"/>
              <div class="row">
                <div class="col-4"></div>
                <div class="col">
                  <button type="submit" class="btn btn-common btn-nv-sty" style="width: 50%;">Add</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-12">
        <div class="card" style="opacity: 90%; height: 300px; margin-bottom: 20px">
          <div class="card-body">
            <form id="orderuser" action="order_lock" method="POST">
            <h5 class="card-title">New order confirmation</h5>
            <p class="card-text">Enter the username of the farmer you bought produce from (It will reflect on your account after the farmer has confirmed the order)</p>
            <br>
            <input type="text" class="form-control" placeholder="Username of farmer" name="farmerusername" />
            <div class="row">
                <div class="col-4"></div>
                <div class="col-5">
                    <button type="submit" href="" class="btn btn-common btn-nv-sty" style="width: 85%;">Submit</button> 
                </div>
                <div class="col-3"></div>
            </div>
            </form>          
          </div>
        </div>
      </div>
      <div class="col-lg-2"></div>
    </div>
  </div>