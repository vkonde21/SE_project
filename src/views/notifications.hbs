{{#section 'style'}}
    .cover {
      display: flex;
      flex-direction: column;
    }
    .content {
      flex: 1 0 auto;
    }
    #contact {
      flex-shrink: 0;
    }
    #mygif {
      position: fixed;
      right: 0;
      bottom: 0;
      min-width: 100%;
      min-height: 100%;
    }
    {{/section}}
  
    
  
  <div class="cover">
  <img src="/img/crops.gif" id="mygif" alt="...">

  <header id="header-wrap">
      <!-- Navbar Start -->
      <nav
        class="navbar navbar-expand-lg fixed-top scrolling-navbar"
        style="background-color: #fff;"
      >
        <div class="container">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button
              class="navbar-toggler"
              type="button"
              data-toggle="collapse"
              data-target="#main-navbar"
              aria-controls="main-navbar"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
              <span class="icon-menu"></span>
              <span class="icon-menu"></span>
              <span class="icon-menu"></span>
            </button>
            <img src="/img/logo.png" class="navbar-brand" style="width: 250px; height: 70px" alt=""/>
          </div>
          <div class="collapse navbar-collapse" id="main-navbar" style="margin-left: 15%;">
            <ul class="navbar-nav mr-auto w-100">
              <li class="nav-item">
                <a class="nav-link" href="dashboard">Dashboard</a>
              </li>
              <li class="nav-item active">
                <a class="nav-link" href="notifications">Notifications</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="updateprofile">Update Profile</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="chat">Chat</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="logout">Logout</a>
              </li>
            </ul>
          </div>
        </div>

        <ul class="mobile-menu">
          <li>
            <a class="page-scroll" href="dashboard">Dashboard</a>
          </li>
          <li>
            <a class="page-scroll" href="updateprofile">Update Profile</a>
          </li>
          <li>
            <a class="page-scroll" href="chat">Chat</a>
          </li>
          <li>
            <a class="page-scroll" href="logout">Logout</a>
          </li>
        </ul>
      </nav>
    </header>
    <div style="color: red; position:absolute">
  <h3>{{messageFailure}}</h3>
</div>

<div style="color: green; position:absolute">
  {{messageSuccess}}
</div>
    <br><br><br><br>
    <div style="text-align: right; position: sticky; padding-right: 50px">
      <span style="background-color: #fff; font-size: 20px; color:#016168; padding: 10px; opacity: 80%;">Hello {{user.username}}</span>
    </div>
    <br><br>
    <h1 class="section-title wow fadeInUp animated" data-wow-delay="0.2s" style="visibility: visible; -webkit-animation-delay: 0.2s; -moz-animation-delay: 0.2s; animation-delay: 0.2s;">
       <span style="background-color: #fff; font-size: 40px; color:#016168; padding: 15px; opacity: 90%;">Notifications</span> 
    </h1>
    <br>
    {{#if notifications}}
    <h1 class="section-title wow fadeInUp animated" data-wow-delay="0.2s" style="visibility: visible; -webkit-animation-delay: 0.2s; -moz-animation-delay: 0.2s; animation-delay: 0.2s;">
       <span style="background-color: #fff; font-size: 30px; color:#016168; padding: 15px; opacity: 90%; color:black">Deals</span> 
    </h1>
    {{#each notifications}}
    
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col">
        <div class="card" style="opacity: 90%; height: 180px">
          <div class="card-body">
            <h5 class="card-title">New notifications</h5>
            <p class="card-text">New deal confirmation request from {{this.1.other_username}}</p>
            <form id="{{this.1._id}}"action="deal_decision" method="POST">
            <input type="hidden" id="dealid1" name="dealid1" value="{{this.1._id}}">
            <div class="row">
              <div class="col">
                <button type="submit" href="" class="btn btn-common btn-nv-sty" style="width: 100%;" name="accept">Accept</button>
              </div>
              <div class="col">
                <button type="submit" href="" class="btn btn-common btn-nv-sty" style="width: 100%;" name="reject">Reject</button>
              </div>
            </div>
            </form>
          </div>
        </div>
      </div>
      {{#if this.2.other_username}}
      <div class="col">
        <div class="card" style="opacity: 90%; height: 180px">
          <div class="card-body">
            <h5 class="card-title">New notifications</h5>
            <p class="card-text">New deal confirmation request from {{this.2.other_username}}</p>
            <form id="{{this.2._id}}"action="deal_decision" method="POST">
            <input type="hidden" id="dealid2" name="dealid2" value="{{this.2._id}}">
            <div class="row">
              <div class="col">
                <button type="submit" href="" class="btn btn-common btn-nv-sty" style="width: 100%;" name="accept">Accept</button>
              </div>
              <div class="col">
                <button type="submit" href="" class="btn btn-common btn-nv-sty" style="width: 100%;" name="reject">Reject</button>
              </div>
            </div>
            </form>
          </div>
        </div>
      </div>
      {{/if}}
      <div class="col-lg-2"></div>
    </div>
    <br>
    {{/each}}
    {{/if}}

    {{#if not_orders}}
    <h1 class="section-title wow fadeInUp animated" data-wow-delay="0.2s" style="visibility: visible; -webkit-animation-delay: 0.2s; -moz-animation-delay: 0.2s; animation-delay: 0.2s;">
       <span style="background-color: #fff; font-size: 30px; color:#016168; padding: 15px; opacity: 90%; color:black">Orders</span> 
    </h1>
    {{#each not_orders}}
    
    <div class="row">
      <div class="col-lg-2"></div>
