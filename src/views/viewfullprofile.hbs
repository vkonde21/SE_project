    <div class="content">
        <br><br><br><br>
        <div style="text-align: right; position: sticky; padding-right: 50px">
          <span style="background-color: #fff; font-size: 20px; color:#016168; padding: 10px; opacity: 80%;">Hello {{user.username}}</span>
        </div>
        <br>
        <div style="text-align: center; position: sticky;">
        <h1> <span style="background-color: #fff; font-size: 40px; color:#016168; padding: 15px; opacity: 80%;">Profile</span> </h1>
        </div>
        <div style="color: red;">
          <p style="font-size: 15px; text-align: center"> <span style="background-color: white; padding: 5px;">{{messageFailure}}</span> </p>
        </div>
        <div style="color: green;">
          <p style="font-size: 15px; text-align: center"> <span style="background-color: white; padding: 5px;">{{messageSuccess}}</span> </p>
        </div>
        <br>
        <section id="form-dom">
        <div class="container" style="margin-bottom: 30px; opacity: 90%;">
          <div class="row">
            <div class="col-12">
              <div class="col-12 col-md-12 col-lg-8 log-style">
                <p style="font-size: 25px;">Name : {{farmer.fullname}}</p>
                <br>
                <p style="font-size: 20px;">Number of deals : {{farmer.deals}}</p>
                <br>
                <p style="font-size: 20px;">Number of orders : {{farmer.orders}}</p>
                <br>
                <p style="font-size: 20px;">Ratings : {{farmer.rating}}
                    <div class="stars-outer" id="stars-outer{{this.1._id}}">
                        <div class="stars-inner" id="stars-inner{{this.1._id}}" style="color:#f8ce0b; --r:20%; --a:{{this.1.rating}}">
                        </div>
                    </div>
                </p>
                <br>
                <p style="font-size: 20px;">Land area : {{farmer.land_area}} acres</p>
                <br>
                <p style="font-size: 20px;">Location : {{farmer.location}}</p>
                <br>
                {{#each crops}}
                <p style="font-size: 20px;">Crop : {{cropname}}</p>
                <br>
                <img src="data:{{this.filetype}};base64,{{this.bString}}" style="width: 100%;" />
                <br><br>
                {{/each}}
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
    
    <!-- Go to Top Link -->
    <a href="#" class="back-to-top">
        <i class="lni-chevron-up"></i>
    </a>
    
    <script>
        function openForm() {
            document.getElementById("myForm").style.display = "block";
        }
        function closeForm() {
            document.getElementById("myForm").style.display = "none";
        }
    </script>
    <script>
        $(document).ready(function() {
            $(".fancybox").fancybox({
                openEffect: "none",
                closeEffect: "none"
            });
            $(".zoom").hover(function() {
                $(this).addClass('transition');
            }, function() {
                $(this).removeClass('transition');
            });
        });
    </script>
    
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    </div>